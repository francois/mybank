<div class="col-sm-12">
  <h1>Inscrire une transaction manuelle</h1>
  <h2><%= @vm.person_name %> <%= @vm.today %></h2>

  <form method="post" action="/transactions/<%= @vm.person_id %>" class="">
    <div class="form-group">
      <label for="transaction_posted_on">Date</label>
      <input  id="transaction_posted_on" class="form-control" name="transaction[posted_on]" type="date" value="<%= @vm.today %>" pattern="(?:19|20)[0-9]{2}-(?:(?:0[1-9]|1[0-2])-(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))" required>
    </div>
    <div class="form-group">
      <label for="transaction_amount">Montant</label>
      <input  id="transaction_amount" class="form-control" name="transaction[amount]" type="number" inputmode="numeric" placeholder="-0,58" required step="0.01">
    </div>
    <div class="form-group">
      <label for="transaction_description">Description</label>
      <input  id="transaction_description" class="form-control" name="transaction[description]" type="text" inputmode="latin" required placeholder="Retrait pour payer une gomme">
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer la transaction</button>
  </form>
</div>
