<div class="col-sm-12">
  <h1>Créer un but</h1>
  <h2><%= @vm.person_name %></h2>

  <form method="post" action="/<%= @vm.family_id %>/person/<%= @vm.person_id %>/goals">
    <div class="form-group">
      <label for="goal_name">Nom du but</label>
      <input  id="goal_name" class="form-control" name="goal[name]" type="text" placeholder="Cartes Pokémon" required>
    </div>
    <div class="form-group">
      <label for="goal_amount">Montant</label>
      <input  id="goal_amount" class="form-control" name="goal[amount]" type="number" inputmode="numeric" placeholder="20" required step="1">
    </div>
    <button type="submit" class="btn btn-primary">Enregistrer le revenu</button>
  </form>
</div>
